<?xml version="1.0" encoding="utf-8" ?>
<system>
    <servers>
        <server value="sandbox">沙箱</server>
        <server value="test">测试服</server>
        <server value="master">主服</server>
    </servers>
    <pages>
        <pageType name="角色管理" authorization="playerManage" icon="anchor">
            <page name="用户信息查看" url="checkUserInfo" authorization="checkUserInfo" type="userManage">
                <form name="login" action="/forward">
                    <input type="text" name="userId"/>
                    <input type="text" name="days"/>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>

                    <formcheck name="numberselect">
                        <checkbox value="11">11</checkbox>
                        <checkbox value="22">22</checkbox>
                        <checkbox value="33">33</checkbox>
                    </formcheck>
                    <input type="submit" name="submit" value="查询"/>
                </form>
            </page>
            <page name="封禁用户" url="banUser" authorization="banUser" type="userManage">
                <form name="queryDisc">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <input type="submit" name="submit">提交</input>
                </form>
                <form name="queryMatch" action="/forward">
                    <input type="text" name="userId"/>
                    <input type="text" name="days"/>
                    <input type="text" name="tour">0</input>
                    <input type="submit" name="submit">提交</input>
                </form>
            </page >
            <page name="查询表结构" url="checkTable" authorization="checkTable" type="userManage">

                <return type="table"/>
                <form name="check" action="/forward">
                    <input type="text" name="args" id="args"/>
                    <input type="submit" name="submit" value="查询"/>
                </form>
            </page>
            <page name="删除用户" url="deleteUser" authorization="deleteUser" type="userManage">
                <form name="删除用户" action="/manager" id="deleteUser">
                    <input type="text" name="username" id="username"/>
                    <input type="submit" name="submit">删除</input>
                </form>
            </page>
            <page name="删除权限" url="deleteAuth" authorization="deleteUser" type="userManage">
                <form name="删除用户权限" action="/manager" id="deleteAuth">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="text" name="auth" id="auth"/>
                    <input type="submit" name="删除"/>
                </form>
            </page>
        </pageType>
        <pageType name="操作管理" authorization="operationManage" icon="archive">
            <page name="订单查询" url="checkOrders" icon="calendar">
                <form name="queryAsset" action="/forward">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <time name="time"/>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <input type="submit" name="ttt">提交</input>
                </form>
            </page>
        </pageType>
        <pageType name="游戏服务管理" authorization="gameServerManage" icon="calendar">
            <page name="开关游戏服" url="operateServer" authorization="operateServer" >
                <form name="queryAsset" action="/forward">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <input type="submit" name="ttt">提交</input>
                </form>
            </page>
        </pageType>
        <pageType name="系统管理" authorization="systemManage" icon="clock">
            <page name="基础信息管理" url="basicInfoManage" authorization="basicInfoManage"  type="configManage">
                <return type="str"/>
                <form name="queryMatch"  id="selectConfigBody">
                    <input type="text" name="args" id="args"/>
                    <input type="button" name="submit" value="提交">提交</input>
                </form>

            </page>
            <page name="操作员管理" url="operatorManage" authorization="operatorManage" type="configManage">
                <form name="queryMatch" action="/forward">
                    <input type="text" name="userId"></input>
                    <input type="text" name="days">0</input>
                    <input type="text" name="tour">0</input>
                    <input type="file" name="config"/>
                    <input type="text" name="days"></input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <formcheck name="numberselect">
                        <radio value="11">11</radio>
                        <radio value="22">22</radio>
                        <radio value="33">33</radio>
                    </formcheck>
                    <input type="submit" name="submit">提交</input>
                </form>
            </page>
        </pageType>
    </pages>
</system>