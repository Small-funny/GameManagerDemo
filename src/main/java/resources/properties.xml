            <page name="添加权限" url="addAuth" authorization="addAuth" type="userAuthManage">
                <form name="添加权限" id="addAuth">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="text" name="auth" id="auth"/>
                    <input type="button" name="添加" id="userManage" value="添加"/>
                </form>
            </page>
        </pageType>
        <pageType name="远程操作管理" authorization="operationManage" icon="archive">
            <page name="表结构查询" url="checkTable" authorization="checkTable" icon="calendar">
                <form name="表查询" id="selectTableData">
                    <input type="text" name="tableName" id="tableName"/>
                    <input type="button" name="查询" id="configManage" value="查询"/>
                </form>
            </page>
        </pageType>
        <pageType name="游戏服务管理" authorization="gameServerManage" icon="calendar">
            <page name="开关游戏服" url="operateServer" authorization="operateServer">
                <form name="queryAsset" action="/forward">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <input type="button" name="ttt">提交</input>
                </form>
            </page>
        </pageType>
        <pageType name="配置管理" authorization="systemManage" icon="clock">
            <page name="配置查询" url="basicInfoManage" authorization="basicInfoManage" type="configManage">
                <return type="str"/>
                <form name="queryMatch" id="selectConfigBody">
                    <input type="text" name="args" id="args"/>
                    <input type="button" name="button" value="查询" id="configManage">提交</input>
                </form>
            </page>
            <page name="添加配置" url="addConfigs" authorization="addConfigs" type="configManage">
                <form name="添加配置" id="addConfigs">
                    <input type="text" name="name" id="name"/>
                    <input type="text" name="body" id="body"/>
                    <input type="text" name="type" id="type"/>
                    <input type="button" name="添加" id="configManage" value="添加"/>
                </form>
            </page>
            <page name="删除配置" url="deleteConfigs" authorization="deleteConfigs">
                <form name="删除配置" id="deleteConfigs">
                    <input type="text" name="name" id="name"/>
                    <input type="button" name="删除" id="configManage" value="删除"/>
                </form>
            </page>
            <page name="操作员管理" url="operatorManage" authorization="operatorManage" type="configManage">
                <form name="queryMatch" action="/forward">
                    <input type="text" name="userId"></input>
                    <input type="text" name="days">0</input>
                    <input type="text" name="tour">0</input>
                    <input type="file" name="config"/>
                    <input type="text" name="days"></input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <formcheck name="numberselect">
                        <radio value="11">11</radio>
                        <radio value="22">22</radio>
                        <radio value="33">33</radio>
                    </formcheck>
                    <input type="button" name="button" id="configManage">提交</input>
                </form>
            </page>
        </pageType>
    </pages>
</system>