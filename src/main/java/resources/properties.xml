<system>
    <servers>
        <server value="sandbox">沙箱</server>
        <server value="test">测试服</server>
        <server value="master">主服</server>
    </servers>
    <pages>
        <pageType name="角色管理" authorization="playerManage" icon="anchor">
            <page name="添加用户" url="addUser" authorization="addUser" type="userManage">
                <form name="添加用户" id="addUser">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="password" id="password"/>
                    <input type="button" name="button" id="userManage" value="添加用户"/>
                </form>
            </page>
            <page name="删除用户" url="deleteUser" authorization="deleteUser" type="userManage">
                <form name="删除用户" id="deleteUser">
                    <input type="text" name="username" id="username"/>
                    <input type="button" name="button" id="userManage" value="删除"/>
                </form>
            </page>
            <page name="删除权限" url="deleteAuth" authorization="deleteUser" type="userAuthManage">

                <form name="删除用户权限" id="deleteAuth">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="text" name="auth" id="auth"/>
                    <input type="button" name="删除" id="userManage" value="删除"/>
                </form>
            </page>
            <page name="查询权限" url="selectAuthList" authorization="selectAuthList" type="userAuthManage">
                <form name="查询用户权限" id="selectAuthList">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="button" name="查询" id="userManage" value="查询"/>
                </form>
            </page>
            <page name="修改用户状态" url="updateUserStatus" authorization="updateUserStatus" type="userManage">
                <form name="修改用户状态" id="updateUserStatus">
                    <input type="text" name="username" id="username"/>
                    <input type="button" name="修改" id="userManage" value="修改"/>
                </form>
            </page>
            <page name="修改用户信息" url="updateUserInfo" authorization="updateUserInfo" type="userManage">
                <form name="修改用户信息" id="updateUserInfo">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="password" id="password"/>
                    <input type="button" name="修改" id="userManage" value="修改"/>
                </form>
            </page>
