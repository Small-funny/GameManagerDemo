<?xml version="1.0" encoding="utf-8" ?>
<system>
    <servers>
        <server value="沙箱">沙箱</server>
        <server value="测试服">测试服</server>
        <server value="主服">主服</server>
    </servers>
    <pages>
        <pageType name="角色管理" authorization="角色管理" icon="anchor">
            <page name="添加用户" url="添加用户" authorization="添加用户" type="userManage">
                <form name="添加用户" id="addUser">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="password" id="password"/>
                    <input type="button" name="button" id="userManage" value="添加用户"/>
                </form>
            </page>
            <page name="删除用户" url="删除用户" authorization="删除用户" type="userManage">
                <form name="删除用户" id="deleteUser">
                    <input type="text" name="username" id="username"/>
                    <input type="button" name="button" id="userManage" value="删除"/>
                </form>
            </page>
            <page name="删除权限" url="删除权限" authorization="删除权限" type="userAuthManage">

                <form name="删除用户权限" id="deleteAuth">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="text" name="auth" id="auth"/>
                    <input type="button" name="删除" id="userManage" value="删除"/>
                </form>
            </page>
            <page name="查询权限" url="查询权限" authorization="查询权限" type="userAuthManage">
                <form name="查询用户权限" id="selectAuthList">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="button" name="查询" id="userManage" value="查询"/>
                </form>
            </page>
            <page name="修改用户状态" url="修改用户状态" authorization="修改用户状态" type="userManage">
                <form name="修改用户状态" id="updateUserStatus">
                    <input type="text" name="username" id="username"/>
                    <input type="button" name="修改" id="userManage" value="修改"/>
                </form>
            </page>
            <page name="修改用户信息" url="修改用户信息" authorization="修改用户信息" type="userManage">
                <form name="修改用户信息" id="updateUserInfo">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="password" id="password"/>
                    <input type="button" name="修改" id="userManage" value="修改"/>
                </form>
            </page>
            <page name="添加权限" url="添加权限" authorization="添加权限" type="userAuthManage">
                <form name="添加权限" id="addAuth">
                    <input type="text" name="username" id="username"/>
                    <input type="text" name="server" id="server"/>
                    <input type="text" name="auth" id="auth"/>
                    <input type="button" name="添加" id="userManage" value="添加"/>
                </form>
            </page>
        </pageType>
        <pageType name="远程操作管理" authorization="远程操作管理" icon="archive">
            <page name="表结构查询" url="表结构查询" authorization="表结构查询" icon="calendar">
                <form name="表查询" id="selectTableData">
                    <input type="text" name="tableName" id="tableName"/>
                    <input type="button" name="查询" id="configManage" value="查询"/>
                </form>
            </page>
        </pageType>
        <pageType name="游戏服务管理" authorization="游戏服务管理" icon="calendar">
            <page name="开关游戏服" url="开关游戏服" authorization="开关游戏服">
                <form name="queryAsset" action="/forward">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <input type="button" name="ttt">提交</input>
                </form>
            </page>
        </pageType>
        <pageType name="配置管理" authorization="配置管理" icon="clock">
            <page name="配置查询" url="配置查询" authorization="配置查询" type="configManage">
                <return type="str"/>
                <form name="queryMatch" id="selectConfigBody">
                    <input type="text" name="args" id="args"/>
                    <input type="button" name="button" value="查询" id="configManage">提交</input>
                </form>
            </page>
            <page name="添加配置" url="添加配置" authorization="添加配置" type="configManage">
                <form name="添加配置" id="addConfigs">
                    <input type="text" name="name" id="name"/>
                    <input type="text" name="body" id="body"/>
                    <input type="text" name="type" id="type"/>
                    <input type="button" name="添加" id="configManage" value="添加"/>
                </form>
            </page>
            <page name="删除配置" url="删除配置" authorization="删除配置">
                <form name="删除配置" id="deleteConfigs">
                    <input type="text" name="name" id="name"/>
                    <input type="button" name="删除" id="configManage" value="删除"/>
                </form>
            </page>
            <page name="操作员管理" url="操作员管理" authorization="操作员管理" type="configManage">
                <form name="queryMatch" action="/forward">
                    <input type="text" name="userId"></input>
                    <input type="text" name="days">0</input>
                    <input type="text" name="tour">0</input>
                    <input type="file" name="config"/>
                    <input type="text" name="days"></input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <formcheck name="numberselect">
                        <radio value="11">11</radio>
                        <radio value="22">22</radio>
                        <radio value="33">33</radio>
                    </formcheck>
                    <input type="button" name="button" id="configManage">提交</input>
                </form>
            </page>
        </pageType>
    </pages>
</system>