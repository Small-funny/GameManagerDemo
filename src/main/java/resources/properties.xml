<?xml version="1.0" encoding="utf-8" ?>
<system>

    <servers>
        <server name="沙箱" value="sandbox" host="localhost" port="8000" url="/GmServer"/>
        <server name="测试服" value="test" host="localhost" port="8000" url="/GmServer"/>
        <server name="主服" value="master" host="localhost" port="8000" url="/GmServer"/>
    </servers>

    <pages>
        <pageType name="角色管理" authorization="playerManage" icon="anchor">
            <page name="用户管理" authorization="addUser" type="userManage">
                <form name="添加用户" operation="addUser">
                    <input type="text" name="用户名" id="username"/>
                    <input type="text" name="密码" id="password"/>
                    <input type="button" id="userManage" value="添加用户"/>
                </form>
                <form name="修改用户信息" operation="updateUserInfo">
                    <input type="text" name="用户名" id="username"/>
                    <input type="text" name="密码" id="password"/>
                    <input type="button" id="userManage" value="修改"/>
                </form>
            </page>
            <page name="权限管理" authorization="selectAuthList" type="userAuthManage" list="selectUserList" listId="username">
                <form name="查询用户权限" operation="selectAuthList">
                    <input type="text" name="用户名" id="username"/>
                    <select name="服务器" id="serverAuth">
                        <option value="sandbox">沙箱</option>
                        <option value="test">测试服</option>
                        <option value="master">主服</option>
                    </select>
                    <select name="类型" id="authType">
                        <option value="list">页面权限</option>
                        <option value="btn">按钮权限</option>
                    </select>
                    <input type="button" name="查询" id="userManage" value="查询"/>
                </form>
            </page>
        </pageType>
        <pageType name="数据库管理" authorization="databaseManage" icon="archive">
            <page name="表结构查询" authorization="selectTableData" operation="">
                <form name="表查询" operation="selectTableData">
                    <input type="text" name="args" id="args"/>
                    <input type="button" name="查询" id="configManage" value="查询"/>
                </form>
            </page>
            <page name="修改金币/钻石" authorization="updatePlayerValue" list="selectPlayerName">
                <form name="修改金币/钻石" operation="updatePlayerValue">
                    <input type="text" name="name" id="name"/>
                    <select name="key" id="key">
                        <option value="coin">金币</option>
                        <option value="diamond">钻石</option>
                    </select>
                    <input type="text" name="value" id="value"/>
                    <input type="button" name="修改" id="configManage" value="修改"/>
                </form>

            </page>
        </pageType>
        <pageType name="游戏服务管理" authorization="gameManage" icon="calendar">
            <page name="开关游戏服" authorization="queryAsset">
                <form name="queryAsset">
                    <input type="text" name="userId">0</input>
                    <input type="text" name="days">0</input>
                    <select name="sel">
                        <option value="1">广州</option>
                        <option value="2">深圳</option>
                        <option value="3">山东</option>
                        <option value="4">北京</option>
                    </select>
                    <formcheck name="radio">
                        <radio value="11">11</radio>
                        <radio value="22">22</radio>
                        <radio value="333">33</radio>
                        <radio value="444">44</radio>
                    </formcheck>
                    <formcheck name="radio">
                        <checkbox value="11">11</checkbox>
                        <checkbox value="22">22</checkbox>
                        <checkbox value="333">33</checkbox>
                        <checkbox value="444">44</checkbox>
                    </formcheck>
                    <input type="file" name="sendfile"/>
                    <time name="time"/>
                    <input type="button" name="ttt">提交</input>
                </form>
            </page>
        </pageType>
        <pageType name="配置管理" authorization="configManage" icon="clock" >
            <page name="配置查询" authorization="selectConfig" type="configManage" list="selectConfigName">
                <form name="配置查询" operation="selectConfigBody">
                    <input type="text" name="args" id="args"/>
                    <input type="button" name="button" value="查询" id="configManage">提交</input>
                </form>
            </page>
            <page name="添加配置" authorization="addConfigs" type="configManage">
                <form name="添加配置" operation="addConfigs">
                    <input type="text" name="name" id="name" from=""/>
                    <textarea name="body" id="body"/>
                    <input type="button" name="添加" id="configManage" value="添加"/>
                </form>
            </page>
        </pageType>
    </pages>
</system>